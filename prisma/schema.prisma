generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       Int              @id @default(autoincrement())
  name     String
  quantity Int
  price    Int
  stocks   CounterProduct[]
}

model CounterProduct {
  id        Int      @id @default(autoincrement())
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
  name      String
  quantity  Int
  ob        Int
  received  Int
  total     Int
  cb        Int
  sell      Int
  price     Int
  amount    Int
  date      DateTime @db.Date
}
